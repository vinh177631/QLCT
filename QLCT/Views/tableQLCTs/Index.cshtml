@model IEnumerable<QLCT.Models.tableQLCT>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách chi tiêu</h2>

<p>
    @Html.ActionLink("Thêm chi tiêu", "Create")
</p>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Ngày
        </th>
        <th>
            Tiền
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @item.date1.Value.ToString("dd/MM/yyyy")
        </td>
        <td>
            @item.money1.ToString("N0")
        </td>
        <td>
            <pre>
                @Html.DisplayFor(modelItem => item.ghichu)
            </pre>
            
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Xem", "Details", new { id=item.id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
